function * {{camelCase sagaName}} (api, action) {
  {{#if isPromisified}}
  const { payload, resolve, reject } = action
  {{else}}
  const { payload } = action
  {{/if}}
  const headers = yield call(getAuthHeaders)
  const response = yield call(api.{{camelCase reduxActionName}}, headers)
  if (response.ok) {
    const data = get(response, 'data')
    yield put(Actions.{{camelCase reduxActionName}}Success())
    {{#if isPromisified}}
    return resolve()
    {{/if}}
  } else {
    let error = get(response, 'data.meta.message')
    if (response.problem === 'NETWORK_ERROR')
      error = 'Backend server is down.'
    yield put(Actions.{{camelCase reduxActionName}}Failure(error))
    {{#if isPromisified}}
    return reject(error)
    {{/if}}
  }
}

